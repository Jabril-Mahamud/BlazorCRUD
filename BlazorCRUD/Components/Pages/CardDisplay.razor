@page "/cards"
@inject BlazorCRUD.Data.ApplicationDbContext DB

<PageTitle>Card Display</PageTitle>

<h1>Card Display</h1>

<div class="card-container">
    @foreach (var history in DB.History)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@history.Content</h5>
                <p class="card-text">
                    <strong>Sauce:</strong>
                    <a href="@history.Sauce" target="_blank">@history.Sauce</a>
                </p>

                <p class="card-text"><strong>Sauce:</strong> @history.Sauce</p>
                <p class="card-text"><strong>Date:</strong> @history.DateTime.ToShortDateString()</p>
            </div>
        </div>
    }
</div>

<div class="card-container">
    @foreach (var robot in DB.Robot)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@robot.Name</h5>
                <p class="card-text"><strong>Company:</strong> @robot.Company</p>
                <p class="card-text"><strong>Release Date:</strong> @robot.ReleaseDate?.ToShortDateString()</p>
            </div>
        </div>
    }
</div>

<style>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .card {
        width: 18rem;
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 2px 2px 12px rgba(0,0,0,0.1);
    }

    .card-body {
        padding: 10px;
    }

    .card-title {
        font-size: 1.25rem;
        margin-bottom: 10px;
    }

    .card-text {
        margin-bottom: 10px;
    }
</style>
