@page "/cards"
@inject BlazorCRUD.Data.ApplicationDbContext DB

<PageTitle>Card Display</PageTitle>

<h1>Card Display</h1>

<div class="card-container">
    @foreach (var history in DB.History)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@history.Content</h5>
                <p class="card-text">
                    <strong>Sauce:</strong>
                    <iframe width="100%" height="315" src="@GetEmbedUrl(history.Sauce)" frameborder="0" allowfullscreen></iframe>
                </p>

                </p>

                <p class="card-text"><strong>Sauce:</strong> @history.Sauce</p>
                <p class="card-text"><strong>Date:</strong> @history.DateTime.ToShortDateString()</p>
            </div>
        </div>
    }
</div>

<div class="card-container">
    @foreach (var robot in DB.Robot)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@robot.Name</h5>
                <p class="card-text"><strong>Company:</strong> @robot.Company</p>
    .card-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
    }

    .card {
        flex: 1 1 calc(25% - 40px); /* Responsive flex basis */
        max-width: calc(25% - 40px); /* Max width */
        border: 1px solid #ddd;
        border-radius: 5px;
        box-shadow: 2px 2px 12px rgba(0, 0, 0, 0.1);
        margin: 10px;
    }

    .card-body {
        padding: 10px;
    }

    .card-title {
        font-size: 1.25rem;
        margin-bottom: 10px;
    }

    .card-text {
        margin-bottom: 10px;
    }

    @media (max-width: 1200px) {
        .card {
            flex: 1 1 calc(33.33% - 40px);
            max-width: calc(33.33% - 40px);
        }
    }

    @media (max-width: 768px) {
        .card {
            flex: 1 1 calc(50% - 40px);
            max-width: calc(50% - 40px);
        }
    }

    @media (max-width: 480px) {
        .card {
            flex: 1 1 100%;
            max-width: 100%;
        }
    }

        margin-bottom: 10px;
    }

    .card-text {
        margin-bottom: 10px;
    }
</style>
